<Window x:Class="Ray_Server.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ray_Server"
        mc:Ignorable="d"
        Title="Ray Server" Height="500" Width="800">
    <Grid Background="LightGray">
        <TextBox IsReadOnly="True" VerticalScrollBarVisibility="Visible" Text="{Binding Message}" Margin="15" Padding="10, 5" Background="White" TextWrapping="Wrap" FontSize="20"/>
    </Grid>
</Window>
